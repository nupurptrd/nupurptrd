# =============================================================================
# Smarton Backend - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# Never commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3001

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:8080,http://localhost:5173,http://localhost:3000

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password
DATABASE_NAME=smarton_content

# Synchronize schema (set to false in production)
DATABASE_SYNCHRONIZE=true

# -----------------------------------------------------------------------------
# Redis (Cache & Queues)
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# JWT secret key (generate with: openssl rand -base64 64)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT token expiration
JWT_EXPIRES_IN=7d

# Refresh token expiration
REFRESH_TOKEN_EXPIRES_IN=30d

# -----------------------------------------------------------------------------
# AI Services
# -----------------------------------------------------------------------------
# Google Gemini API key for content generation
GEMINI_API_KEY=your-gemini-api-key

# AI model configuration
AI_MODEL=gemini-1.5-pro
AI_MAX_TOKENS=8000
AI_TEMPERATURE=0.7

# -----------------------------------------------------------------------------
# ElevenLabs (Text-to-Speech)
# -----------------------------------------------------------------------------
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# ElevenLabs default voice settings
ELEVENLABS_DEFAULT_MODEL=eleven_multilingual_v2

# -----------------------------------------------------------------------------
# AWS S3 (Storage)
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_BUCKET_NAME=your-bucket-name
AWS_REGION=ap-south-1

# Use S3 for storage (set to false for local storage)
USE_S3_STORAGE=true

# Local Storage (alternative to S3)
LOCAL_STORAGE_PATH=./uploads

# -----------------------------------------------------------------------------
# Firebase (Push Notifications)
# -----------------------------------------------------------------------------
# Path to Firebase Admin SDK credentials JSON
FIREBASE_CREDENTIALS_PATH=./smarton-content-firebase-adminsdk.json

# -----------------------------------------------------------------------------
# DRM (Digital Rights Management)
# -----------------------------------------------------------------------------
# DRM secret key for signing URLs (generate with: openssl rand -base64 32)
DRM_SECRET=smarton-drm-secret-key-change-in-production

# Maximum concurrent streams per user
MAX_CONCURRENT_STREAMS=2

# Heartbeat timeout in minutes
HEARTBEAT_TIMEOUT_MINUTES=5

# Signed URL validity in minutes
SIGNED_URL_VALIDITY_MINUTES=60

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
# Requests per second (short limit)
RATE_LIMIT_SHORT_TTL=1000
RATE_LIMIT_SHORT_LIMIT=3

# Requests per 10 seconds (medium limit)
RATE_LIMIT_MEDIUM_TTL=10000
RATE_LIMIT_MEDIUM_LIMIT=20

# Requests per minute (long limit)
RATE_LIMIT_LONG_TTL=60000
RATE_LIMIT_LONG_LIMIT=100

# -----------------------------------------------------------------------------
# Optional: Monitoring & Logging
# -----------------------------------------------------------------------------
# Log level (error, warn, log, debug, verbose)
LOG_LEVEL=log

# Sentry DSN for error tracking
# SENTRY_DSN=
